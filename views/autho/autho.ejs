<!DOCTYPE html>

<head>
<title>Home</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>

*
{
  padding: 0;
  margin: 0;

}

body
{
  background: linear-gradient(180deg,#4a939e,#316c8f);
  background-repeat: no-repeat;
  background-attachment: fixed;
  overflow-x: hidden;
  height: 100vh;
  width: 100vw;
  overflow-y: hidden;
}

.container
{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90%;
  padding: 10px;
}

.card
{
  width: 80%;
  height: 500px;
  background-color: #3c366b;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  padding-bottom: 30px;
}

.register
{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 35%;
}

.register h2
{
  align-self: center;
  padding: 20px;
  color:#edf2f7;
  font-weight: bold;
}

.register .input
{
  border: none;
  padding: 7px 10px;
  margin: 20px 0;
}

.btn
{
  margin-top: auto;
  margin-bottom: 20px;
  padding: 8px 5px;
  border: none;
  border-radius: 3px;
  background: #80aaff;
  cursor: pointer;

}

.line
{
  height: 100%;
  width: 2px;
  background-color: grey;
  align-self: flex-end;
}

.message-container
{
  display: flex;
  justify-content: center;
  margin-top: 10px;
  height: 80px;
}

.warning
{
  background-color: rgb(255, 255, 204,0.8);
  border-left: 10px solid #ffb31a;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}


.sucess
{
  background-color: #99ff99;
  border-left: 10px solid #4dff4d;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

@media (max-width: 800px)
{

  .container
  {
    height: 100%;
    margin-top: 50px;
  }

  .card
  {
    flex-direction: column;
    height: 700px;
    width: 80%;
    padding: 20px;
  }

  .register
  {
    width: 80%;
  }

  .register .btn
  {
    margin-top: 20px;
  }

  body
  {
    overflow-y: scroll;
  }

}



</style>

</head>

<body id="body">

<%- include("../partials/nav",{user: false}) %>

<% if(typeof message !== "undefined")
{%>
<div class="message-container">
    <div class="<%= type %>">
    <h1 id="message"><%= message %></h1>
    </div>
</div>
<%}%>

<div class="container">

<div class="card">

<form class="register" action="/autho/register" method="POST">
<h2>Register</h2>
<input type="text" name="username" class="input" placeholder="username" required/>
<input type="email" name="email"  class="input" placeholder="email"/ required>
<input type="password" name="password" class="input" placeholder="password" required/>
<input type="submit" class="btn"  value="Register"/>
</form>

<div class="line"> </div>

<form class="register" action="/autho/login" method="POST">
<h2>Log In</h2>

<input type="text" name="username" class="input" placeholder="username"/ required>
<input type="password" name="password" class="input" placeholder="password" required/>

<input type="submit" class="btn" value="Log In"/>
</form>

</div>

</div>

<script>

let message = document.getElementById("message");


if(message !== null)
{
  document.getElementById("body").style.overflowY = "scroll";
}


</script>

</body>


</html>
